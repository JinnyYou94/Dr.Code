# 코드 5-22

import pandas as pd
data = pd.read_csv('gas.csv', encoding = 'cp949')

import matplotlib.pyplot as plt
import numpy as np

# 6월 열의 데이터를 넘파이로 변환하고 X에 저장한다.
X = data['6월'].to_numpy()

# boxplot을 그린다.
plt.boxplot(X)

# y축 눈금 단위를 지수단위가 아닌 float로 변경한다.
TickF = plt.gca().get_yticks()
plt.gca().set_yticklabels(['{:.0f}'.format(a) for a in TickF])

plt.title('6월 천연가스 생산량')
plt.show()
